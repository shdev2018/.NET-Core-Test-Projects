@page
@model GuitarList.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br /><br />
<h2 class="text-info">Edit Guitar</h2>
<br /><br />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Guitar.id" />
    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Guitar.Make"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Guitar.Make" autofocus class="form-control" />
                </div>
                <span asp-validation-for="Guitar.Make"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Guitar.Model"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Guitar.Model" class="form-control" />
                </div>
                <span asp-validation-for="Guitar.Model"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-offset-1 col-sm-2">
                    <input type="submit" value="Update Guitar Info" class="btn btn-primary form-control">
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
