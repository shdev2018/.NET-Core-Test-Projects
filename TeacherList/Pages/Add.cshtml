@page
@model TeacherList.Pages.AddModel
@{
    ViewData["Title"] = "Add";
}
<br />
<h2 class="text-info">Add New Teacher</h2>
<br />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Teacher.FirstName" ></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Teacher.FirstName" autofocus class="form-control"/>
                </div>
                <span asp-validation-for="Teacher.FirstName"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Teacher.LastName"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Teacher.LastName" class="form-control"/>
                </div>
                <span asp-validation-for="Teacher.LastName"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Teacher.Instrument"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Teacher.Instrument" class="form-control"/>
                </div>
                <span asp-validation-for="Teacher.Instrument"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3">
                <input type="submit" value="Add Teacher" class="btn btn-primary" />
            </div>
            <div class="col-sm-3">
                <a asp-page="Index" class="btn btn-success">Back To List</a>
            </div>
        </div>
    </div>
    <br />
</form>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}